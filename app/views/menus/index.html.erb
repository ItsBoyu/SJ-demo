<div class="container">
<% @menus.each do |menu| %>
  <div>
    <h1 class="text-center my-3">
      <%= link_to menu.name, menu_path(menu.id), class: 'text-decoration-none text-secondary' %> Menu
    </h1>
  </div>
  <% menu.dishes.each do |dish| %>
  <div class="d-flex justify-content-center">
    <div class="card mb-3" style="max-width: 720px;">
      <div class="row g-0">
        <div class="col-md-6">
          <img class="w-100 h-100" src="<%= dish.img_url %>"  alt="<%= dish.name %>">
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <h3 class="card-title"><%= dish.name %></h3>
            <p class="card-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis aspernatur voluptate dolor nihil dignissimos consequuntur est dolore tempore, repellendus, sunt id a magnam officiis ipsa, recusandae repudiandae maiores repellat ab!</p>
            <p class="card-text">
              <small class="text-muted">priceï¼š<%= dish.price %></small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
</div>